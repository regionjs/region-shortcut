{
  "name": "region-shortcut",
  "version": "0.7.0",
  "description": "region-shortcut",
  "keywords": [
    "react",
    "region-core",
    "region-shortcut"
  ],
  "repository": "github:regionjs/region-shortcut",
  "license": "MIT",
  "author": "Cong Zhang <dancerphil1994@gmail.com>",
  "main": "./lib/index.js",
  "scripts": {
    "build": "rm -rf lib/ && babel src --out-dir lib",
    "check": "npm run build && npm run lint && jest --colors",
    "codecov": "npm test && codecov",
    "lint": "eslint --ignore-path .gitignore --ext .js,jsx ./src",
    "prepublish": "npm run check",
    "test": "jest src --colors --coverage"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run check"
    }
  },
  "jest": {
    "setupFiles": [
      "<rootDir>/scripts/jest.setup.js"
    ]
  },
  "dependencies": {
    "region-core": "^0.7.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.1.2",
    "@babel/core": "^7.3.4",
    "@babel/plugin-proposal-class-properties": "^7.3.4",
    "@babel/preset-env": "^7.3.4",
    "@babel/preset-react": "^7.0.0",
    "babel-eslint": "^10.0.1",
    "codecov": "^3.2.0",
    "eslint": "^5.14.1",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-jest": "^22.3.0",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-react": "^7.12.4",
    "husky": "^1.3.1",
    "jest": "^24.1.0",
    "react": "^16.8.3"
  },
  "peerDependencies": {
    "react": ">=16.8.0"
  }
}
